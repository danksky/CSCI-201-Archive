package DOM;

public class Event {
	public String action, movie, rating;

	public Event() {}
	
	public Event(String a, String m, String r)
	{
		action = a;
		movie = m;
		rating = r;
	}
	
	public String toString() {
		String star = this.getClass().getResource("/resources/star21.png").toString();
		String thumbsUp = this.getClass().getResource("/resources/thumbs-up-right.png").toString();
		String thumbsDown = this.getClass().getResource("/resources/thumbs-down-right.png").toString();
		String firstIconImgSrc = "", lastIconImgSrc = "";
		
		if (action.toLowerCase().equals("liked")) 
			firstIconImgSrc = "<img src=\"" + thumbsUp + "\" width=\"10\" height=\"10\" alt=\"asdf\" />";
		if (action.toLowerCase().equals("disliked")) 
			firstIconImgSrc = "<img src=\"" + thumbsDown + "\" width=\"10\" height=\"10\" alt=\"asdf\" />";
		if (action.toLowerCase().equals("rated")) {
			lastIconImgSrc = star;
			if (stringIsInteger(rating)) {
				int r = Integer.parseInt(rating);
				lastIconImgSrc = "";
				for (int i = 0; i < r; i++) 
					lastIconImgSrc += star;
				lastIconImgSrc = "<img src=\"" + lastIconImgSrc + "\" width=\"10\" height=\"10\" alt=\"asdf\" />";
			}
		}

		return firstIconImgSrc + " " + action + " " + movie + " " + rating + " " + lastIconImgSrc;
	}
	
	public boolean stringIsInteger(String s) {
		for (int i = 0; i < s.length(); i++) {
			if (!Character.isDigit(s.charAt(i)))
				return false;
		}
		return true;
	}
}
